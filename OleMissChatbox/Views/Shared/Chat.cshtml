@using OleMissChatbox.ViewModels

@section Scripts {
<script src="~/lib/knockout/build/output/knockout-latest.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
}
<link href="~/css/site.css" rel="stylesheet" />

<div class="alert alert-warning alert-dismissible d-none" id="error-message" role="alert">
    <span id="error-message"></span>
    <button type="button" class="close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="container">

    <div class="row">
        <h4>Chat Page</h4>
        <h5 id="email-header">@ViewBag.Message</h5>
    </div>

    <div class="row">
        <div class="col-sm-3">
            <h5>Class list</h5>
            <button id="add-class" hidden onclick="showCreateClassModal()">
                Add Class
                <i class="fas fa-plus"></i>
            </button>
            <ul class="classes list-unstyled" id="class-list"></ul>
        </div>

        <div class="col-sm-9">
            <div class="chat-box">
                <ul id="messagesList">
                </ul>
            </div>
        </div>
    </div>
</div>



<div class="chat-input">
    <div class="row">
        <div class="d-inline p-3">
            <input class="col-9 offset-3" type="text" id="messageInput" />
        </div>
        <div><input class="col-5 offset-7" type="button" id="sendButton" value="Send Message" /></div>
    </div>
</div>


@*create class and error message modals below*@
<div class="modal" id="create-class-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Class</h5>
                <button type="button" id="x-close" onclick="hideCreateClassModal()" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" id="className" placeholder="Class name">
                <span id="classNameErrorMessage" style="color:red">Enter a class name</span>
            </div>
            <div class="modal-footer">
                <button type="button" id="close" onclick="hideCreateClassModal()" class="btn btn-secondary">Close</button>
                <button type="button" id="create-class" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="error-message-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Notification</h5>
                <button type="button" id="x-close" onclick="hideErrorMessageModal()" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span id="user-error-message"></span>
            </div>
            <div class="modal-footer">
                <button type="button" id="close" onclick="hideErrorMessageModal()" class="btn btn-secondary">Close</button>
            </div>
        </div>
    </div>
</div>
