<!DOCTYPE html>
<html>
<head>
    <title>OleMiss Chatbox: @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/fortawesome/fortawesome-free/css/all.css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md bg">
            <h1 class="navbar-brand">Welcome to OleMiss Chatbox</h1>
            <div>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Settings">Settings</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Logout</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <footer class="container, text-center text-white card-footer bg-dark">
        <div>CSCI 487 2022: OleMiss Chatbox</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>